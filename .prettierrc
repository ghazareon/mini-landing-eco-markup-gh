{
 "plugins": ["prettier-plugin-tailwindcss", "@prettier/plugin-php"],
 "tailwindConfig": "tailwind.config.ts",
 "arrowParens": "always",
 "bracketSpacing": true,
 "endOfLine": "lf",
 "htmlWhitespaceSensitivity": "css",
 "insertPragma": false,
 "jsxBracketSameLine": false,
 "jsxSingleQuote": false,
 "printWidth": 90,
 "proseWrap": "preserve",
 "quoteProps": "preserve",
 "requirePragma": false,
 "semi": true,
 "singleQuote": false,
 "tabWidth": 1,
 "trailingComma": "none",

 "useTabs": false,
 "embeddedLanguageFormatting": "auto",
 "overrides": [
  {
   "files": ["*.inc", "*.php"],
   "options": {
    "parser": "php",
    "phpVersion": "8.2",
    "printWidth": 120,
    "singleQuote": true,
    "braceStyle": "1tbs"
   }
  },
  {
   "files": ["src/**/*.{html}"],
   "options": {
    "printWidth": 80,
    "singleQuote": false,
    "tabWidth": 1
   }
  },
  {
   "files": ["./src/**/*.{js,ts,jsx,tsx,mdx}"],
   "options": {
    "printWidth": 80,
    "singleQuote": false,
    "tabWidth": 1
   }
  }
 ]
}
